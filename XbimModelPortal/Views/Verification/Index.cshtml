
@{
    ViewBag.Title = "Verify COBie against DPoW";
    Layout = "~/Views/Shared/_LayoutWizard.cshtml";
}

@section Scripts
{
    <script src="~/Scripts/verification-main.js"></script>
}

@section Styles
{
<link href="~/Content/verification.css" rel="stylesheet" />
}

<h3>Select your IFC or COBie file</h3>
<section>
    <div>
        <div class="form-err" id="form-err-1"></div>
        <p>
            Select your IFC or COBie file. Our tool will do its best to get as much information as possible out of it.
        </p>
        <input type="file" style="display: none;" id="input-cobie-file"
               accept=".ifc,.ifczip,.ifcxml,.xls,.xlsx,.xml,.json"/>
        <div style="text-align: center;">
            <div class="cobie-file-name file-name"></div>
            <button id="btn-cobie-file">Select COBie file</button>
        </div>
    </div>
</section>

<h3>Select DPoW requirements</h3>
<section>
    <div>
        <div class="form-err" id="form-err-2"></div>
        <p>
            Select Digital Plan of Work requirements you have downloaded from NBS BIM Toolkit application.
        </p>
        <input type="file" style="display: none;" id="input-dpow-file"
               accept=".xml,.json" />
        <div style="text-align: center;">
            <div class="dpow-file-name file-name"></div>
            <button id="btn-dpow-file">Select DPoW</button>
        </div>
    </div>
</section>

<h3>Run verification</h3>
<section>
    <div>
        <p>
            This will upload the files "<span class="cobie-file-name file-name"></span>" and "<span class="dpow-file-name file-name"></span>" on our 
            server and will perform the verification.
        </p>
        <div style="text-align: center;">
            <button id="btn-run-validation">Run verification</button>
            <div id="progress-report"></div>
            <img src="~/Content/loader.gif" alt="loader" width="50" height="50" id="progress-report-loader" />
        </div>
    </div>
</section>

<h3>Review issues</h3>
<section>
    <div>
        <p>
            It is possible to fix some of the problems automaticaly. We put a great effort in this.
            Feel free to get this modified file and see the difference.
        </p>
        <div style="text-align: center;">
            <button id="btn-download-report">
                <img src="~/Content/loader.gif" alt="loader" width="30" height="30" style="vertical-align: middle;" />
                Download report sheet
            </button>
        </div>

        <div id="semantic-browser">
            <div id="semantic-browser-left" class="panel50">
                <div id="semantic-browser-navigation">
                    <h3>Project </h3>
                    <div class="no-overflow">
                        <div id="v-structure" class="semantic-model-tree"></div>
                    </div>
                    <h3>Asset types</h3>
                    <div class="no-overflow">
                        <div id="v-assetTypes" class="semantic-model-tree"></div>
                    </div>
                    <h3>Documents</h3>
                    <div class="no-overflow">
                        <div id="v-facility-documents" class="semantic-model-tree"></div>
                    </div>
                </div>
            </div>
            <div id="semantic-browser-right" class="panel50">
                <div id="semantic-browser-details">
                    <h3>Attributes and properties</h3>
                    <div class="no-overflow-y">
                        <div id="attrprop"></div>
                    </div>
                    <h3>Assignments</h3>
                    <div class="no-overflow-y">
                        <div id="assignments"></div>
                    </div>
                </div>
                </div>
        </div>
    </div>
</section>

